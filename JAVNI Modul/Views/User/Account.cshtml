@{
    ViewData["Title"] = "Account Page";
}

<link rel="stylesheet" href="~/css/userAccount.css" asp-append-version="true" />

@model User
<div class="text-center BlckBox">
    <div class="texttt">
        <img src="data:image/jpeg;base64,@Model.UserProfilePictureBase64" alt="Profile Picture" class="profilepic"/>
        <h1 class="display-6 mb-3 pt-4"><span class="Bojatxt">Username: </span>@Model.Username</h1>
        <h1 class="display-6 mb-3"><span class="Bojatxt">First Name: </span>@Model.FirstName</h1>
        <h1 class="display-6 mb-3"><span class="Bojatxt">Last Name: </span>@Model.LastName</h1>
        <h1 class="display-6 mb-3"><span class="Bojatxt">Email: </span>@Model.Email</h1>
        <h1 class="display-6 mb-3"><span class="Bojatxt">Phone: </span>@Model.PhoneNumber</h1>
        <h1 class="display-6 mb-3"><span class="Bojatxt">Known Technologies: </span></h1>
    
            @if (Model.KnownTechnologies != null)
            {
                @foreach (var technology in Model.KnownTechnologies)
                {
                    <h1 class="display-6 mb-3">@technology.Name</h1>
                }
            }
            else
            {
               <h1 class="display-6 mb-3">No known technologies</h1>
            }
    
 

      

    </div>
</div>
<div class="text-center changeer">
    <a asp-controller="User" asp-action="ChangePassword" class="btn btn-danger">Change Password</a>
</div>
