<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JAVNI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,200" />
</head>
<body>
    <header>
        @if (!(ViewContext.RouteData.Values["action"].Equals("Register") || ViewContext.RouteData.Values["action"].Equals("Login")))
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <img src="/logo/Logo.png" style="height: 110px; box-shadow:0 0 50px #FFCE63 !important; border-radius:100px; margin-left:10px;  margin-right:30%;" />

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item @(ViewContext.RouteData.Values["controller"].Equals("Post") && ViewContext.RouteData.Values["action"].Equals("Index") ? "active" : "")">
                                <span class="material-symbols-outlined">
                                    roofing
                                </span>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Index">
                                    Home
                                </a>
                            </li>
                            <li class="nav-item @(ViewContext.RouteData.Values["controller"].Equals("Message") && ViewContext.RouteData.Values["action"].Equals("Index") ? "active" : "")">
                                <span class="material-symbols-outlined">
                                    chat
                                </span>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Message" asp-action="Index">
                                    Messages
                                </a>
                            </li>
                            <li class="nav-item @(ViewContext.RouteData.Values["controller"].Equals("User") && ViewContext.RouteData.Values["action"].Equals("Account") ? "active" : "")">
                                <span class="material-symbols-outlined">
                                    settings_accessibility
                                </span>
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Account">
                                    Account
                                </a>
                            </li>
                            <li class="nav-item @(ViewContext.RouteData.Values["controller"].Equals("User") && ViewContext.RouteData.Values["action"].Equals("FriendList") ? "active" : "")">
                                <span class="material-symbols-outlined">
                                    diversity_3
                                </span>
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="FriendList">
                                    Friend List
                                </a>
                            </li>
                            <li class="nav-item @(ViewContext.RouteData.Values["controller"].Equals("User") && ViewContext.RouteData.Values["action"].Equals("Logout") ? "active" : "")">
                                <span class="material-symbols-outlined">
                                    exit_to_app
                                </span>
                                <a class="nav-link logout text-dark" asp-area="" asp-controller="User" asp-action="Logout">
                                    Logout
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container @(ViewContext.RouteData.Values["action"].Equals("Register") || ViewContext.RouteData.Values["action"].Equals("Login") ? "" : "makerr")">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script>
        let interval;

        function startBuzz() {
            interval = setInterval(function () {
                const symbol = document.querySelector('.material-symbols-outlined');
                if (symbol.classList.contains('buzz')) {
                    symbol.classList.remove('buzz');
                } else {
                    symbol.classList.add('buzz');
                }
            }, 200);
        }

        function stopBuzz() {
            clearInterval(interval);
            const symbol = document.querySelector('.material-symbols-outlined');
            symbol.classList.remove('buzz');
        }
    </script>
    <style>
        .navbar-nav .nav-item.active {
            background-color: #FFCE63; 
            border-radius: 100%; 
            padding: 10px 20px; 
            box-shadow: 0 4px 6px rgba(0,0,0, 0.4); 
            transition: all 0.3s ease; 
    margin-left:40px;
            display: flex;
            align-items: center;
        }

            .navbar-nav .nav-item.active:hover {
                transform: translateY(-2px); 
                box-shadow: 0 6px 8px rgba(0,0,0, 0.7);
            }

            .navbar-nav .nav-item.active .nav-link,
            .navbar-nav .nav-item.active .material-symbols-outlined {
                color: #0B409C !important;
                margin: 0px !important;
                transition: color 0.3s ease; 
            }

            

            .navbar-nav .nav-item.active:hover .nav-link,
            .navbar-nav .nav-item.active:hover .material-symbols-outlined {
                color: #073763 !important; 
            }



    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>